<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.msnigirev.oris.golfclient.controller.MainMenuController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="nameField" promptText="Введите имя игрока" style="-fx-font-size: 16px;" />
    <Button text="Играть" onAction="#onPlayClicked" style="-fx-font-size: 16px; -fx-padding: 10 20;" />
</VBox>